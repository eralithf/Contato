                <HBox spacing="10">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Nome:" />
                                <TextField fx:id="txtNome" promptText="Digite seu nome"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Sobrenome:" />
                                <TextField fx:id="txtSobrenome" promptText="Digite seu sobrenome"/>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <Label text="Email:" />
                <TextField fx:id="txtEmail" promptText="Digite seu email"/>

